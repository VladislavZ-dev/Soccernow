<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ul.fc.css.javafx.controller.LoginController">
  <children>
    <VBox alignment="CENTER" spacing="20.0">
      <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0" />
      </padding>

      <Label text="Login">
        <font>
          <Font size="32.0" />
        </font>
      </Label>

      <VBox alignment="CENTER" spacing="10.0">
        <HBox alignment="CENTER" spacing="10.0">
          <Label text="Username:">
            <font>
              <Font size="16.0" />
            </font>
          </Label>
          <TextField fx:id="usernameField" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
          <Label text="Password:">
            <font>
              <Font size="16.0" />
            </font>
          </Label>
          <PasswordField fx:id="passwordField" />
        </HBox>

        <Button text="Sign In" onAction="#switchToDashboardView">
          <font>
            <Font size="16.0" />
          </font>
        </Button>
      </VBox>
    </VBox>
  </children>
</VBox>
